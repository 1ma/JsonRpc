{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "JSON-RPC 2.0 single request schema",

  "type": "object",
  "required": ["jsonrpc", "method"],
  "additionalProperties": false,
  "properties": {
    "jsonrpc": {
      "type": "string",
      "enum": ["2.0"]
    },
    "method": {
      "type": "string"
    },
    "params": {
      "type": ["array", "object"]
    },
    "id": {
      "type": ["integer", "string"]
    }
  }
}
